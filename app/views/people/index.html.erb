<h2>Peoples Index Page</h2>

<%= search_form_for @q do |f| %>
 <div class="field">
   <%= f.label :name_cont, "Search by name" %>
   <%= f.text_field :name_cont %>
 </div>
 <div class="actions"><%= f.submit "Search" %></div>
<% end %>


<% @peoples.each do |people| %>
 <%= people.id %>
 <%= link_to people.name, person_path(people) %>
 <hr>
<% end %>

 <div><%= link_to "Create New Peoples", new_person_path %></div>
 <div><%= link_to "Clear Search", people_path %></div>
<hr>
<div><%= link_to "Home", root_path %></div>
