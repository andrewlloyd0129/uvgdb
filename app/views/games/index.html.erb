<p>Now i have a games index!!</p>

<%= search_form_for @q do |f| %>
 <div class="field">
   <%= f.label :title_cont, "Search by title" %>
   <%= f.text_field :description_cont %>
 </div>
 <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<table class="table">
	<tr>
		<th class="col-md-4"><%= sort_link @q, :title, "Game Title"  %></th>
		<th class="col-md-4"><%= sort_link @q, :description, "Description"  %></th>
		<th class="col-md-4"><%= sort_link @q, :release, "Release Date"  %></th>
	</tr>
	<% @games.each do |game| %>
	<tr>
		 <td class="col-md-4"><%= link_to game.title, game_path(game) %></td>
		 <td class="col-md-4"><%= truncate(game.description) %></td>
		 <td class="col-md-4"><%= game.release.strftime("%B %e %Y") %></td>
	 </tr>
	 <% end %>
</table>
 <div><%= link_to "Create New Game", new_game_path %></div>
 <div><%= link_to "Clear Search", games_path %></div>

<%= paginate @games %>