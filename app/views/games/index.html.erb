<p>Now i have a games index!!</p>

<%= search_form_for @q do |f| %>
 <div class="field">
   <%= f.label :title_cont, "Search by title" %>
   <%= f.text_field :description_cont %>
 </div>
 <div class="actions"><%= f.submit "Search" %></div>
<% end %>


<% @games.each do |game| %>
  <%= game.id %>
 <%= link_to game.title, game_path(game) %>
 <%= game.release %>
 <%= truncate(game.description) %>
 <hr>
 <% end %>

 <div><%= link_to "Create New Game", new_game_path %></div>
 <div><%= link_to "Clear Search", games_path %></div>

<%= paginate @games %>