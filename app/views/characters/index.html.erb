<h2>Characters Index Page</h2>

<%= search_form_for @q do |f| %>
 <div class="searchbar">
   <%= f.label :name_cont, "Search by name" %>
   <%= f.text_field :name_cont %>
   <%= f.submit "Search" %>
 </div>
<% end %>

 <div><%= link_to "Clear Search", characters_path %></div>
 <div><%= link_to "Create New Characters", new_character_path if logged_in?(:admin) %></div>
<hr>

<% @characters.each do |character| %>
 <%= character.id %>
 <%= link_to character.name, character_path(character) %>
 <%= character.first_appearence %>
 <hr>
<% end %>


<%= paginate @characters %>